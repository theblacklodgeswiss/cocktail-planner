rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users (including anonymous) can access
    
    // Materials collection - read for authenticated users
    match /materials/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Recipes collection - read for authenticated users
    match /recipes/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Fixed values collection - read for authenticated users
    match /fixedValues/{document=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
